{
  "name": "@ubiquitypress/metrics-widget",
  "version": "1.1.7",
  "repository": "https://github.com/ubiquitypress/metrics-widget.git",
  "license": "MIT",
  "scripts": {
    "check": "npm run lint && npm run typecheck",
    "dev": "webpack serve --mode development",
    "build": "npm run build:embed && npm run build:npm && npm run build:types",
    "build:embed": "webpack --mode production --progress",
    "build:npm": "webpack --config webpack.npm.config.js --mode production",
    "build:types": "tsc -p tsconfig.types.json",
    "format": "biome format --write .",
    "lint": "biome check --fix .",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "files": [
    "dist/npm",
    "LICENSE",
    "readme.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/npm/types/react.d.ts",
      "import": "./dist/npm/index.js",
      "require": "./dist/npm/index.js"
    },
    "./widget.css": "./dist/npm/widget.css"
  },
  "types": "./dist/npm/types/react.d.ts",
  "main": "./dist/npm/index.js",
  "module": "./dist/npm/index.js",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.8",
    "@types/dompurify": "^3.2.0",
    "@types/jquery": "^3.5.33",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "babel-loader": "^10.0.0",
    "core-js": "^3.47.0",
    "css-loader": "^7.1.2",
    "globals": "^16.5.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "regenerator-runtime": "^0.14.1",
    "sass": "^1.96.0",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "jquery": "^3.7.1",
    "jvectormap": "^2.0.4",
    "jvectormap-content": "^0.1.1",
    "lucide-react": "^0.561.0",
    "mini-css-extract-plugin": "^2.9.4",
    "polished": "^4.3.1",
    "ts-deepmerge": "^7.0.3",
    "twitter-widgets": "^2.0.0"
  }
}
